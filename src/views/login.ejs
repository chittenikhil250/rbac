<%- include('./layouts/header.ejs') %>

    <div class="container">
        <center><h1 class="mt-5">Welcome back!!</h1></center>
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4 mt-4">
                <form>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="form-control rwed" id="exampleInputEmail1" aria-describedby="emailHelp">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Password</label>
                      <input type="password" class="rwed form-control" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3 form-check">
                      <input type="checkbox" class="form-check-input" id="exampleCheck1">
                      <label class="form-check-label" for="exampleCheck1">Remember me </label>
                    </div>
                    <div class="mb-3">
                        <p class="form-text inline">Don't have an account? </p>
                        <a class="form-text text-primary" href="/auth/signup"> Sign up</a>
                    </div>


                    <button type="submit" class="btn px-4 btn-primary">Login</button>
                </form> 
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>

